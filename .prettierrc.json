{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 2,
        "printWidth": 140,
        "importOrder": [
          "^(?![@\\.]).*",
          "^@",
          "^\\.\\.",
          "^\\."
        ],
        "importOrderSeparation": true
      }
    }
  ]
}
